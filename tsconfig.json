{
    "compileOnSave": true,
    "compilerOptions": {
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "outDir": "build",
        "removeComments": false,
        "rootDir": "source",
        "sourceMap": true,
        "types": ["jest", "mongoose", "node"]
    },
    "include": ["source"],
    "exclude": ["node_modules", "source/**/*.test.*"]
}
